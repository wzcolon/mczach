  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'shoulda-matchers'
  gem 'selenium-webdriver'
  gem 'pry'
  gem 'launchy'

  gem 'capybara', '~> 2.1.0'
end
