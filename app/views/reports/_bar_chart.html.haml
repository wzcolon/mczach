:javascript
  $(document).ready(function(){
    var s1 = [#{average_time(@time_in_ruby)}, 0];
    var s2 = [#{average_time(@time_in_db)}, 0];
    var s3 = [#{average_time(@time_rendering)}, 0];
    var ticks = ["#{@application.name} average request breakdown (ms)"];
    plot2 = jQuery.jqplot ('chart2', [s1, s2, s3], 
      {
        stackSeries: true,
        seriesDefaults: {
          renderer: jQuery.jqplot.BarRenderer,
          rendererOptions: {
            barMargin: 60
          },
          pointLabels: {show: true}
        },
        series: [
         {label:'Time in Ruby'},
         {label:'Time in Database'},
         {label:'Time Rendering'}
        ],
        axes: {
          xaxis: {
            renderer: $.jqplot.CategoryAxisRenderer,
            ticks: ticks
          },
          yaxis: {
            padMin: 0
          }
        },
        legend: { 
          show:true, 
          location: 'e',
          placement: 'outside'
        }
    });
  });
